# Production Environment Configuration
# Copy to .env.prod and fill in actual values

# Database Configuration
DB_USER=mm_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=market_making
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# API Keys (use environment-specific keys)
EXCHANGE_API_KEY=YOUR_PRODUCTION_API_KEY
EXCHANGE_API_SECRET=YOUR_PRODUCTION_API_SECRET
EXCHANGE_PASSPHRASE=YOUR_PRODUCTION_PASSPHRASE

# Trading Configuration
TRADING_MODE=production
CIRCUIT_BREAKER_ENABLED=true
REGIME_DETECTOR_ENABLED=true
HEDGE_ADAPTIVE_ENABLED=true

# Risk Limits (strict for production)
MAX_POSITION_BTC=10.0
MAX_POSITION_ETH=100.0
DAILY_LOSS_LIMIT_PCT=0.05
MAX_DRAWDOWN_PCT=0.10

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
PROMETHEUS_RETENTION_DAYS=30
TRADING_ENGINE_PORT=8080
RISK_MONITOR_PORT=8081
MARKET_DATA_COLLECTOR_PORT=8082

# Alerting
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_PAGERDUTY_KEY=YOUR_PAGERDUTY_KEY

# Performance
MAX_QUOTE_LATENCY_MS=100
MAX_RISK_CHECK_LATENCY_MS=10
LOG_LEVEL=INFO
